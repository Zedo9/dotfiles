font pango: Cascadia Code Medium 7

default_border none
xwayland enable

### Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty

# output eDP-1 scale 1.25

# Random wallpaper
set $wallpapers_path /home/zedo/Pictures/wallpapers
output * bg $(find $wallpapers_path -type f -name *.jpg | shuf -n 1) fill

input * {
    xkb_layout "fr,ar"
    xkb_options "grp:win_space_toggle"
    xkb_numlock enable
}

input type:touchpad {
    tap enabled
    natural_scroll disabled
    accel_profile adaptive
}
